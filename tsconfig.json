{
  "compilerOptions": {
    "target": "es2017",                                  
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                    
    "module": "commonjs",                                                              
    "baseUrl": "./src",                                
    "paths": {
      "@modules/*":["modules/*"],
      "@config/*":["config/*"],
      "@shared/*":["shared/*"],
      "@errors/*":["errors/*"],
      "@utils/*":["utils/*"],
      "@database/*":["database/*"]
    },                                      
    "resolveJsonModule": true,                        
    "outDir": "./dist",                                      
    "removeComments": true,                           
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": false,                                      
    "skipLibCheck": true                                 
  }
}